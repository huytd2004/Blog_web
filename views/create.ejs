<html lang="en"></html>
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-blog content">
    <form action="/blogs" method="POST"> <!-- This form will send a POST request to /blogs -->
      <label for="title">Blog title:</label>
      <input type="text" id="title" name="title" required> <!-- The name attribute được sử dụng để nhận biết the form data on the server -->
      <label for="snippet">Blog snippet:</label>
      <input type="text" id="snippet" name="snippet">
      <label for="body">Blog body:</label>
      <textarea id="body" name="body" required></textarea>
      <button>Submit</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>